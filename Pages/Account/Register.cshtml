@page
@model SupermarketWEB.Pages.Account.RegisterModel
@{
}
<style>
    body {
        background-color: #f5f5f7;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', sans-serif;
    }

    .login-container {
        max-width: 360px;
        margin: 80px auto;
        padding: 40px;
        background-color: #ffffff;
        border-radius: 20px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.06);
    }

    .login-title {
        text-align: center;
        font-size: 26px;
        font-weight: 600;
        color: #1d1d1f;
        margin-bottom: 30px;
    }

    label {
        font-size: 15px;
        color: #1d1d1f;
        font-weight: 500;
        display: block;
        margin-bottom: 8px;
    }

    .form-control {
        width: 100%;
        padding: 12px 16px;
        font-size: 16px;
        border: 1px solid #d2d2d7;
        border-radius: 12px;
        background-color: #f9f9fa;
        transition: border-color 0.3s ease;
        appearance: none;
    }

        .form-control:focus {
            outline: none;
            border-color: #0071e3;
            background-color: #ffffff;
            box-shadow: 0 0 0 3px rgba(0, 113, 227, 0.2);
        }

    .btn-submit {
        width: 100%;
        padding: 12px;
        font-size: 16px;
        background-color: #28a745;
        color: white;
        border: none;
        border-radius: 12px;
        font-weight: 600;
        transition: background-color 0.3s ease;
    }

        .btn-submit:hover {
            background-color: #218838;
        }

    .form-text {
        font-size: 12px;
        color: #86868b;
        margin-top: 4px;
    }

    .text-danger {
        font-size: 13px;
        color: #e30000;
        margin-top: 4px;
        display: block;
    }
</style>

<div class="login-container">
    <div class="login-title">Registro de Usuario</div>

    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>

        <div class="mb-3">
            <label for="name">Nombre</label>
            <input type="text" class="form-control" asp-for="User.Name" id="name" placeholder="Nombre completo" />
            <span class="text-danger" asp-validation-for="User.Name"></span>
        </div>

        <div class="mb-3">
            <label for="email">Correo Electrónico</label>
            <input type="email" class="form-control" asp-for="User.Email" id="email" placeholder="Correo electrónico" />
            <span class="text-danger" asp-validation-for="User.Email"></span>
        </div>

        <div class="mb-3">
            <label for="password">Contraseña</label>
            <input type="password" class="form-control" asp-for="User.Password" id="password" placeholder="Contraseña" />
            <span class="text-danger" asp-validation-for="User.Password"></span>
        </div>

        <button type="submit" class="btn-submit">Registrarse</button>
    </form>
</div>
